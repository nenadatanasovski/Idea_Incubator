{
  "name": "idea-incubator",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "cli": "tsx scripts/cli.ts",
    "capture": "tsx scripts/capture.ts",
    "profile": "tsx scripts/profile.ts",
    "sync": "tsx scripts/sync.ts",
    "evaluate": "tsx scripts/evaluate.ts",
    "migrate": "tsx database/migrate.ts",
    "migrate:status": "tsx database/migrate.ts --status",
    "questions:load": "tsx questions/loader.ts",
    "questions:load:force": "tsx questions/loader.ts --force",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "build": "tsc",
    "spike:sdk": "tsx spikes/spike-0.1-agent-sdk.ts",
    "spike:parallel": "tsx spikes/spike-0.2-parallel.ts",
    "spike:sqlite": "tsx spikes/spike-0.3-sqlite.ts",
    "server": "tsx watch server/index.ts",
    "frontend": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:install": "cd frontend && npm install",
    "dev": "concurrently \"npm run server\" \"npm run frontend\"",
    "monitor": "tsx server/monitoring/run-monitoring.ts",
    "monitor:verbose": "tsx server/monitoring/run-monitoring.ts --level=verbose",
    "monitor:debug": "tsx server/monitoring/run-monitoring.ts --level=debug",
    "monitor:execute": "tsx server/monitoring/run-monitoring.ts --task-list=docs/bootstrap/TASK-LIST.md --auto-start",
    "monitor:dry-run": "tsx server/monitoring/run-monitoring.ts --task-list=docs/bootstrap/TASK-LIST.md --auto-start --dry-run",
    "setup": "npm install && npm run frontend:install && npm run migrate"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.0",
    "glob": "^10.0.0",
    "gray-matter": "^4.0.3",
    "multer": "^2.0.2",
    "sharp": "^0.34.5",
    "sql.js": "^1.10.0",
    "uuid": "^9.0.0",
    "ws": "^8.18.3",
    "yaml": "^2.8.2",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.0.0",
    "@types/sql.js": "^1.4.9",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^1.0.0",
    "concurrently": "^9.1.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
