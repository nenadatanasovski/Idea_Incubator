{
  "name": "idea-incubator",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "cli": "tsx scripts/cli.ts",
    "capture": "tsx scripts/capture.ts",
    "profile": "tsx scripts/profile.ts",
    "sync": "tsx scripts/sync.ts",
    "evaluate": "tsx scripts/evaluate.ts",
    "migrate": "tsx database/migrate.ts",
    "migrate:status": "tsx database/migrate.ts --status",
    "migrate:titles": "tsx scripts/migrate-titles.ts",
    "migrate:types": "tsx scripts/migrate-block-types.ts",
    "migrate:types:dry-run": "tsx scripts/migrate-block-types.ts --dry-run --verbose",
    "neo4j:start": "docker-compose -f docker-compose.neo4j.yml up -d",
    "neo4j:stop": "docker-compose -f docker-compose.neo4j.yml down",
    "neo4j:schema": "tsx scripts/neo4j-setup-schema.ts",
    "neo4j:migrate": "tsx scripts/migrate-to-neo4j.ts",
    "neo4j:migrate:dry-run": "tsx scripts/migrate-to-neo4j.ts --dry-run --verbose",
    "schema:generate": "drizzle-kit generate",
    "schema:migrate": "drizzle-kit migrate",
    "schema:push": "drizzle-kit push",
    "schema:studio": "drizzle-kit studio",
    "schema:check": "drizzle-kit check",
    "questions:load": "tsx questions/loader.ts",
    "questions:load:force": "tsx questions/loader.ts --force",
    "test": "vitest run",
    "test:run": "vitest run",
    "test:unit": "vitest run --exclude 'tests/integration/**'",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:obs:api": "vitest run tests/unit/observability/api",
    "test:obs:ui": "vitest run frontend/src/components/observability/__tests__",
    "test:obs:services": "vitest run tests/unit/observability/unified-event-emitter.test.ts tests/unit/observability/execution-manager.test.ts",
    "test:obs:integration": "vitest run tests/integration/observability",
    "test:obs:python": "cd coding-loops && python3 -m pytest ../tests/unit/observability/test_observability_skills.py -v",
    "test:obs:all": "npm run test:obs:api && npm run test:obs:ui && npm run test:obs:services && npm run test:obs:integration && npm run test:obs:python",
    "test:task": "tsx scripts/run-task-tests.ts",
    "test:task:obs-all": "tsx scripts/run-task-tests.ts TU-OBS-INF-001 && tsx scripts/run-task-tests.ts TU-OBS-INF-002 && tsx scripts/run-task-tests.ts TU-OBS-TST-001 && tsx scripts/run-task-tests.ts TU-OBS-FEA-007",
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "spike:sdk": "tsx spikes/spike-0.1-agent-sdk.ts",
    "spike:parallel": "tsx spikes/spike-0.2-parallel.ts",
    "spike:sqlite": "tsx spikes/spike-0.3-sqlite.ts",
    "server": "tsx watch server/index.ts",
    "frontend": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:install": "cd frontend && npm install",
    "dev": "concurrently \"npm run server\" \"npm run frontend\"",
    "monitor": "tsx server/monitoring/run-monitoring.ts",
    "monitor:verbose": "tsx server/monitoring/run-monitoring.ts --level=verbose",
    "monitor:debug": "tsx server/monitoring/run-monitoring.ts --level=debug",
    "monitor:execute": "tsx server/monitoring/run-monitoring.ts --task-list=docs/bootstrap/TASK-LIST.md --auto-start",
    "monitor:dry-run": "tsx server/monitoring/run-monitoring.ts --task-list=docs/bootstrap/TASK-LIST.md --auto-start --dry-run",
    "setup": "npm install && npm run frontend:install && npm run migrate"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@mariozechner/pi-ai": "^0.51.6",
    "@prisma/client": "^7.3.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "express": "^4.21.0",
    "glob": "^10.0.0",
    "gray-matter": "^4.0.3",
    "multer": "^2.0.2",
    "neo4j-driver": "^6.0.1",
    "prisma": "^7.3.0",
    "reagraph": "^4.20.0",
    "sharp": "^0.34.5",
    "sql.js": "^1.10.0",
    "uuid": "^9.0.0",
    "ws": "^8.18.3",
    "yaml": "^2.8.2",
    "zod": "^3.22.0",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.0.0",
    "@types/sql.js": "^1.4.9",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^1.0.0",
    "concurrently": "^9.1.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "puppeteer": "^24.35.0",
    "supertest": "^7.2.2",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
